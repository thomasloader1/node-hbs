<div class="row my-5">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h4>Ingresar</h4>
            </div>
            <div class="bg-dark rounded-circle login-circle mx-auto my-4 " >
                <img src="/img/svg/gota.svg" height="70" class="m-3" alt="">
            </div>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group"> 
                        <input type="email" name="email" placeholder="Email" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block btn-sm" type="submit">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>