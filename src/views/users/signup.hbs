<div class="row my-5">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title d-flex flex-column justify-content-center align-items-center">Crear una cuenta <i class="mt-2 fas fa-user"></i></h4>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrasenia" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Confirmar Contrasenia" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block btn-sm" type="submit">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>