<div class="container">
    <div class="row">
        {{#if user}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="font-weight-bold">{{user.name}}</h4>
                    <small><strong>ID:</strong> {{user._id}}</small>
                </div>
                <div class="card-body">
                    <form action="/">
                        <div class="form-group">
                            <!-- Email input -->
                            <label for="email" class="disabled">Email</label>
                            <input type="email" id="email" class="form-control" value="{{user.email}}" disabled>
                        </div>
                        <div class="form-group ">
                            <!-- Password input -->
                            <label for="passwordInput">Cambiar Password</label>
                            <div class="d-flex justify-content-between align-items-center"> 
                            <input id="changePassword" type="password" name="password" id="passwordInput"
                                class="form-control" >
                                <a id="showPassword">
                                    <i class="far fa-eye px-3"></i>
                                </a>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script>
        let input = document.querySelector('#changePassword');
        let showPassword = document.querySelector('#showPassword');
        showPassword.addEventListener('click', (e)=>{
            let { target } = e;

            if(input.getAttribute('type') === 'password'){
                input.setAttribute('type','text');
                target.classList.replace('fa-eye', 'fa-eye-slash');
            }else{
                input.setAttribute('type','password');
                target.classList.replace('fa-eye-slash', 'fa-eye');
            }
        });
        console.log(input)
</script>
        {{/if}}
    </div>
</div>

