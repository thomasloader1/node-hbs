<div class="col-md-4 mx-auto my-3">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Tarea</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea placeholder="Descripcion" name="description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect">Prioridad</label>
                        </div>
                        <select name="priority" class="custom-select" id="inputGroupSelect">
                            <option value="null" selected>Elegir...</option>
                            <option value="primary">Baja</option>
                            <option value="warning">Media</option>
                            <option value="danger">Alta</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>