<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar tarea</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Titulo" value="{{ note.title }}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control"
                        placeholder="Descripcion">{{ note.description }}</textarea>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect">Prioridad</label>
                        </div>
                        <select name="priority" class="custom-select" id="inputGroupSelect">
                            <option value="null" selected>Elegir...</option>
                            <option value="primary">Baja</option>
                            <option value="warning">Media</option>
                            <option value="danger">Alta</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-sm" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>